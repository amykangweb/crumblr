<h2>Latest Posts</h2>

<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>

<% @posts.each do |post| %>

        <p>Posted by <strong><%= link_to post.user.name, post.user %></strong></p>
        <%= link_to (image_tag post.image.url(:medium, false)), post %><br>
        <%= post.content %><br>
        <%= post.score %>&nbsp;Likes<p>

        <% if user_signed_in? %>
        <% if (post.user == current_user) || (current_user.admin?) %>
        <span>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></span></p>
        <% end %>
        <% end %>
    <% end %>

<br>
