<h1>Latest Posts</h1>

    <% @posts.each do |post| %>

        <p><%= image_tag post.image.url(:original, false) %><br>
        <%= post.content %><br>

        <% if user_signed_in? %>
        <% if (post.user == current_user) || (current_user.admin?) %>
        <span><%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span></p>
        <% end %>
        <% end %>
    <% end %>

<br>

<%= link_to 'New Post', new_post_path %>
