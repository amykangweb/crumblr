<p id="notice"><%= notice %></p>

<p>
	<strong>Posted by &nbsp;<%= link_to @post.user.name, @post.user %></strong>
</p>

<p>
	<%= image_tag @post.image.url(:large, false) %>
</p>

<p>
  <%= @post.content %>
</p>

<p>
	<span class="score"><%= @post.score %></span>&nbsp;Likes
</p>

<div class="vote">

<% if user_signed_in? %>

<%= render 'vote' %>

<% else %>

	<%= link_to "vote", new_user_session_path, notice: "Please log in to vote." %>
</p>

<% end %>

</div>

<% if user_signed_in? %>
<% if @post.user == current_user || current_user.admin? %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Delete', @post, method: :delete, data: {confirm: "Are you sure?"} %>

<% end %>
<% end %>

<p>

<div class="likes">

<%= render 'list' %>

</div>

